  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/",
      "program": "${workspaceFolder}/index.js",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "NPM Run Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
    },
    {
      "name": "NPM Run testing",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test"],
    },
    {
      "name": "NPM Run connection test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test-connect-db"],
    },
    {
      "name": "NPM Run migrate",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "migrate"],
    },
    {
      "name": "NPM Run init fixtures",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "init-fixtures"],
    },
  ]
}